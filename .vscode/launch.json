{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Run Truffle Migrations",
        "program": "${workspaceFolder}/node_modules/.bin/truffle",
        "args": [
          "migrate",
          "--reset"
        ],
        "cwd": "${workspaceFolder}",
        "runtimeArgs": [
          "--inspect-brk"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }